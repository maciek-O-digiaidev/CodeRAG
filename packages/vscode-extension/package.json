{
  "name": "code-rag-vscode",
  "displayName": "CodeRAG",
  "description": "Intelligent codebase context engine for AI coding agents â€” semantic code search, RAG indexing, and MCP server integration directly in VS Code.",
  "version": "0.1.0",
  "publisher": "coderag",
  "license": "MIT",
  "icon": "images/icon.png",
  "repository": {
    "type": "git",
    "url": "https://dev.azure.com/momc-pl/CodeRAG/_git/CodeRAG",
    "directory": "packages/vscode-extension"
  },
  "homepage": "https://dev.azure.com/momc-pl/CodeRAG",
  "bugs": {
    "url": "https://dev.azure.com/momc-pl/CodeRAG/_workitems"
  },
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Programming Languages",
    "Machine Learning",
    "Other"
  ],
  "keywords": [
    "coderag",
    "ai",
    "code-search",
    "rag",
    "mcp",
    "semantic-search",
    "vector-database",
    "code-context",
    "ai-coding",
    "model-context-protocol"
  ],
  "galleryBanner": {
    "color": "#1e1e2e",
    "theme": "dark"
  },
  "preview": true,
  "activationEvents": [
    "workspaceContains:.coderag.yaml",
    "onCommand:coderag.configure"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "coderag-sidebar",
          "title": "CodeRAG",
          "icon": "$(search)"
        }
      ]
    },
    "views": {
      "coderag-sidebar": [
        {
          "type": "webview",
          "id": "coderag.searchPanel",
          "name": "Search"
        }
      ]
    },
    "configuration": {
      "title": "CodeRAG",
      "properties": {
        "coderag.autoConfigureClaude": {
          "type": "boolean",
          "default": false,
          "description": "Automatically detect Claude Code CLI and inject CodeRAG MCP server configuration into .claude/settings.json on activation."
        }
      }
    },
    "commands": [
      {
        "command": "coderag.search",
        "title": "CodeRAG: Search"
      },
      {
        "command": "coderag.index",
        "title": "CodeRAG: Index"
      },
      {
        "command": "coderag.status",
        "title": "CodeRAG: Status"
      },
      {
        "command": "coderag.configureClaude",
        "title": "CodeRAG: Configure Claude Code"
      },
      {
        "command": "coderag.configure",
        "title": "CodeRAG: Configure"
      }
    ]
  },
  "scripts": {
    "build": "esbuild src/extension.ts --bundle --outfile=dist/extension.js --external:vscode --format=cjs --platform=node --sourcemap",
    "watch": "esbuild src/extension.ts --bundle --outfile=dist/extension.js --external:vscode --format=cjs --platform=node --sourcemap --watch",
    "clean": "rm -rf dist",
    "test": "vitest run",
    "vscode:prepublish": "esbuild src/extension.ts --bundle --outfile=dist/extension.js --external:vscode --format=cjs --platform=node --minify",
    "package": "vsce package --no-dependencies"
  },
  "dependencies": {},
  "devDependencies": {
    "@types/vscode": "^1.85.0",
    "@types/node": "^22.13.4",
    "@vscode/vsce": "^3.2.2",
    "esbuild": "^0.24.2",
    "typescript": "^5.7.3",
    "vitest": "^3.2.4"
  }
}
